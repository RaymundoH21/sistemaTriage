<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TriageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color Triage: "
                            android:textColor="#127BCB"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>

                        <LinearLayout
                            android:id="@+id/colorPerfil"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/fondo_perfil_color"
                            android:backgroundTint="#ffffff"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/txtColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Color:"
                                android:textColor="#ffffff"
                                android:textSize="16sp"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/ivEColor"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_icono_editar"
                            android:visibility="gone"
                            tools:visibility="visible">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación: "
                        android:textColor="#127BCB"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/txtUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación:"
                        android:textColor="#094886"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado: "
                                android:textColor="#127BCB"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtEstado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado:"
                                android:textColor="#094886"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/ivEEstado"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_icono_editar"
                            android:visibility="gone"
                            tools:visibility="visible">

                        </ImageView>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearEstadoCama"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/textEstadoCamaInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cama: "
                        android:textColor="#127BCB"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtEstadoCamaInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cama:"
                        android:textColor="#094886"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearEstadoHospital"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/textEstadoHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital: "
                        android:textColor="#127BCB"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtEstadoHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital:"
                        android:textColor="#094886"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearEstadoAmbu"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/textEstadoInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambulancia: "
                        android:textColor="#127BCB"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtEstadoInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambulancia:"
                        android:textColor="#094886"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evaluación hecha por: "
                        android:textColor="#127BCB"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evaluación:"
                        android:textColor="#094886"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última actualización: "
                        android:textColor="#127BCB"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualización:"
                        android:textColor="#094886"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>