<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:orientation="horizontal"
    android:background="@drawable/fondotransparente"
    android:translationY="72dp"
    android:layout_marginLeft="12dp">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_mitad_redondeado_izquierda"
        android:backgroundTint="#127BCB"
        android:gravity="center">

        <TextView
            android:id="@+id/txtNumTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:background="@drawable/fondo_redondeado_sin_padding"
            android:backgroundTint="#B50E13"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNumRojo"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:background="@drawable/fondo_redondeado_sin_padding"
            android:backgroundTint="#FFDC27"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNumAmarillo"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:background="@drawable/fondo_redondeado_sin_padding"
            android:backgroundTint="#198329"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNumVerde"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/fondo_semi_redondeado_mapa">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:background="@drawable/fondo_redondeado_sin_padding"
            android:backgroundTint="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNumNegro"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>